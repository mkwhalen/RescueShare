@model RescueShare.Models.Trips

@{
    ViewData["Title"] = "My Trips";
   
}

<h2>MyTrips</h2>

<h4>Trips</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MyTrips">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PickupTime" class="control-label"></label>
                <input asp-for="PickupTime" class="form-control" />
                <span asp-validation-for="PickupTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DropoffTime" class="control-label"></label>
                <input asp-for="DropoffTime" class="form-control" />
                <span asp-validation-for="DropoffTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TripTime" class="control-label"></label>
                <input asp-for="TripTime" class="form-control" />
                <span asp-validation-for="TripTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
