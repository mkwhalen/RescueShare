@model IEnumerable<RescueShare.Models.Space>

@{
    ViewData["Title"] = "ManageSpaces";
}
<p>
    <partial name="_ShelterLayout" />
</p>
<h2>Manage Spaces</h2>

<p>
    <a asp-controller="Spaces" asp-action="Create" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-controller="Spaces" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Spaces" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Spaces" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
