            <td>
                @Html.DisplayFor(modelItem => item.ShelterReceiver.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FosterSender.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FosterReceiver.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RescueSender.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RescueReceiver.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
