                @Html.DisplayNameFor(model => model.ShelterReceiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FosterSender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FosterReceiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RescueSender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RescueReceiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PickupTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DropoffTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransportTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverType)
            </td>
