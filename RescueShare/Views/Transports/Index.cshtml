@model IEnumerable<RescueShare.Models.TransportViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PickupTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DropoffTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShelterSender)
            </th>
